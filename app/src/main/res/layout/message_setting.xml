<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/background">

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="短信设置"
		android:textColor="#FFFFFF" android:gravity="center_horizontal"
		android:textSize="25px" android:layout_margin="20px" />
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="发短信时将短信保存到发件箱:"
		android:layout_margin="10px" android:textSize="20px"
		 />

	<RadioGroup android:id="@+id/RadioGroup01" android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<RadioButton android:text="是" android:id="@+id/sButton1" 
			android:layout_width="wrap_content" android:layout_height="wrap_content" 
			android:layout_marginRight="50px" 
			android:layout_marginLeft="50px" android:onClick="onSaveClick" />
		<RadioButton android:text="否" android:id="@+id/nsButton1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:onClick="onNsaveClick" />
    </RadioGroup>
    
</LinearLayout>