<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.example" android:versionCode="1" android:versionName="1.0">
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".MainActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".WriteMessageActivity" android:label="撰写短信">
		</activity>
		<activity android:name=".MessagePhoneActivity">
		</activity>
		<activity android:name=".MessageContextActivity">
		</activity>
		<activity android:name=".MessageSettingActivity">
		</activity>
		<activity android:name=".QQMessageActivity"
		          android:label="短信聊天室">
		</activity>
		<receiver android:name=".SMSReceiver">
			<intent-filter>
				<action android:name="android.provider.Telephony.SMS_RECEIVED" />
			</intent-filter>
		</receiver>
	</application>
	<uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.SEND_SMS" />
	<uses-permission android:name="android.permission.RECEIVE_SMS" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.CALL_PHONE" />
	<user-permission android:name="android.permission.CALL_PRIVILEGED" />
</manifest> 